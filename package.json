{
  "name": "web3-data-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for Web3 data access with multiple data provider support",
  "main": "src/index.js",
  "bin": {
    "web3-data-mcp": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js --debug",
    "test": "jest tests/",
    "test:unit": "jest tests/test-rootdata-provider.js",
    "test:integration": "node tests/api-test.js",
    "test:coverage": "jest --coverage",
    "test:provider": "jest tests/test-rootdata-provider.js",
    "test:api": "node tests/api-test.js",
    "lint": "eslint src/ tests/ *.js --ext .js",
    "lint:fix": "eslint src/ tests/ *.js --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.js\"",
    "config:example": "node src/index.js --config-example",
    "help": "node src/index.js --help",
    "env:help": "node src/index.js --env-help"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "web3",
    "blockchain",
    "crypto",
    "data",
    "api",
    "rootdata"
  ],
  "author": "Web3 Data MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^30.0.3",
    "prettier": "^3.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/web3-data-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/web3-data-mcp/issues"
  },
  "homepage": "https://github.com/your-org/web3-data-mcp#readme",
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": false,
    "testMatch": ["**/tests/**/*.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ]
  }
}
